<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="153dp"

        android:layout_height="1270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/buttonleightgradient3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lsrdvs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView

            app:srcCompat="@drawable/secajoutrose"
            android:id="@+id/imgfichepatient"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lowresolutionbackground"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="9dp"
            />

        <TextView
            android:id="@+id/nomfichepatient"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgfichepatient" />

        <TextView
            android:id="@+id/prenomfichepatient"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/telfichepatient"
            app:layout_constraintTop_toBottomOf="@+id/nomfichepatient" />

        <TextView
            android:id="@+id/telfichepatient"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prenomfichepatient" />

        <TextView
            android:id="@+id/datenaissfichepatient"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telfichepatient" />


        <TextView
            android:id="@+id/professionfichepatient"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/telfichepatient"
            app:layout_constraintTop_toBottomOf="@+id/datenaissfichepatient" />


    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/lsrdvs"
        android:layout_width="151dp"
        android:layout_height="1138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2" />


    <EditText
        android:id="@+id/txtdetails"
        android:layout_width="710dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/editfichpatient"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lsrdvs"
        app:layout_constraintTop_toBottomOf="@+id/Remarquerdv" />

    <EditText
        android:id="@+id/txttitre"
        android:layout_width="234dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/editfichpatient"
        android:inputType="text|textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lsrdvs"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titrerdv"
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/txttitre"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lsrdvs"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Remarquerdv"
        android:layout_width="237dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/txtdetails"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="27dp"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lsrdvs"
        app:layout_constraintTop_toBottomOf="@+id/txttitre" />

    <Button
        android:id="@+id/edit"
        android:layout_width="76dp"
        android:layout_height="58dp"


        android:layout_marginStart="104dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="765dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="edit"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lsrdvs"
        app:layout_constraintTop_toBottomOf="@+id/txtdetails" />


</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>