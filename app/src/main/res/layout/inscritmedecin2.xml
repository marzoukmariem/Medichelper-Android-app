<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUpdateProfil__PatientActivity"

    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/nommedecin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="Nom" />

        <EditText
            android:id="@+id/prenommedecin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="prenom" />
    </LinearLayout>

    <EditText
        android:id="@+id/numtelmedecin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="Numero Telephone" />

    <EditText
        android:id="@+id/infomedecin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="Spécialité" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/loginmedecin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="Login" />

        <EditText
            android:id="@+id/passwordmedecin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="Mot de passe"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="162dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"

            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infomedecin"
            app:srcCompat="@drawable/diplomeon" />
    </LinearLayout>

    <Button
        android:id="@+id/ajoutermedecin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext2"
        android:backgroundTint="@color/colorPrimary"
        android:text="confirmer"
        android:textColor="@color/white" />

</LinearLayout>