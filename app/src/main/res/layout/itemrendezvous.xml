<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="260dp"
        android:background="@color/white"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nompatientrendez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="10dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/prenompatienrendez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/daterendez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="100dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="402dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TimePicker
                    android:id="@+id/timePicker1"
                    android:layout_width="164dp"
                    android:layout_height="157dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/md_grey_400"

                    android:numbersBackgroundColor="@color/colorTextBlack"
                    android:numbersInnerTextColor="@color/colorTextBlack"
                    android:numbersSelectorColor="@color/colorTextBlack"
                    android:numbersTextColor="@color/colorTextBlack"
                    android:timePickerMode="spinner" />

                <Button
                    android:id="@+id/approuver"
                    android:layout_width="126dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="approuver"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>