<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/nomsec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/prenomsec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="prenom"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/infosec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="info"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/telsec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="NÂ° Tel :"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/loginsec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="login"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/passwordsec"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonleightgradient4"
            android:ems="10"
            android:hint="password"
            android:inputType="textPersonName"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/ajoutersec"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="ajouter"
            />


</LinearLayout>